@model Pelicula

@{
    ViewData["Title"] = "DetallesPelicula";
}

@section Scripts{ 
<script>
    $(document).ready(function () {
        $("#capaescenas").load("/Peliculas/EscenaPelicula?idpelicula=1&posicion=0");
        $("#botonsiguiente").click(function () {
            var posicion = $(this).val();
            posicion += 1;
            $(this).val(posicion);
            $("#capaescenas").load("/Peliculas/EscenaPelicula?idpelicula=1&posicion="+posicion);
        })
    });
</script>
}

<h1>DetallesPelicula</h1>

<div>
    <h4>Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Poster
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Poster" style="height:500px;width:250px" />
        </dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Nombre Original
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreOriginal)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<div id="capaescenas">
    <button id="botonsiguiente" value="0" class="btn btn danger">Siguiente</button>
    <button id="botonanterior" value="0" class="btn btn danger">Anterior</button>
</div>
