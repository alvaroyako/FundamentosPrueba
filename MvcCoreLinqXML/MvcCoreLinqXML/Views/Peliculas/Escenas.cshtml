@model Escena

@{
    ViewData["Title"] = "Escenas";
}

<h1>Escenas</h1>
<h2>Hay @ViewData["REGISTROS"] escenas</h2>

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Peliculas"
               asp-action="Escenas"
               asp-route-posicion="1">
                Primero
            </a>
        </li>
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Peliculas"
               asp-action="Escenas"
               asp-route-posicion="@ViewData["ANTERIOR"]">
                Anterior
            </a>
        </li>
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Peliculas"
               asp-action="Escenas"
               asp-route-posicion="@ViewData["SIGUIENTE"]">
                Siguiente
            </a>
        </li>
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Peliculas"
               asp-action="Escenas"
               asp-route-posicion="@ViewData["ULTIMO"]">
                Ultimo
            </a>
        </li>
    </ul>
</div>

<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>   
            <td>
                @Model.Nombre
            </td>
            <td>
                @Model.Descripcion
            </td>
            <td>
                @Model.Imagen
            </td>
            
        </tr>
    </tbody>
</table>
