@model List<Hospital>

<h1>Entity Framework Hospitales</h1>
<table class="table table-active">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Camas</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Hospital h in Model)
            {
                <tr>
                    <td>@h.Nombre</td>
                    <td>@h.Direccion</td>
                    <td>@h.Telefono</td>
                    <td>@h.Camas</td>
                    <td><a asp-controller="Hospitales"
                           asp-action="Details"
                           asp-route-idhospital="@h.IdHospital">Detalles</a>
                        <a asp-controller="Doctores" asp-action="DoctoresHospital" asp-route-idhospital="@h.IdHospital">Doctores</a>
                    </td>
                  
                </tr>
            }
    </tbody>
</table>