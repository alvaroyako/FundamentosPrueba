@model List<Empleado>

@{ 
    List<string> oficios = ViewBag.oficios as List<string>;
}

<h1>Incrementar salarios oficio empleados</h1>

<form method="post">
    <label>Oficios</label>
    <select name="oficio" class="form-control">
        @foreach(string oficio in oficios)
            {
                <option value="@oficio">@oficio</option>
            }
    </select>
    <br />
    <label>Incremento salarial: </label>
    <input type="text" name="incremento" class="form-control" /><br />
    <button type="submit" class="btn btn-info">
        Incrementar salarios
    </button>
</form>
@if (Model != null) 
{
    <table class="table table-info">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Empleado emp in Model)
                {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td style="background-color:lightgreen">@emp.Salario</td>
                </tr>
                }
        </tbody>
    </table>
}