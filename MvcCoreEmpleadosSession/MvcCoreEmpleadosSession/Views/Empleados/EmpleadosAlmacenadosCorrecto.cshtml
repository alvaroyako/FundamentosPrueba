@model IEnumerable<MvcCoreEmpleadosSession.Models.Empleado>

@{
    ViewData["Title"] = "EmpleadosAlmacenadosCorrecto";
}

<h1>EmpleadosAlmacenadosCorrecto</h1>

<h2>@ViewData["MENSAJE"]</h2>
<a asp-controller="Empleados"
   asp-action="SessionEmpleadosCorrecto">
    Volver Almacenar Empleados
</a>


@if (Model != null)
{
<form method="post">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Apellido
                </th>
                <th>
                    Oficio
                </th>
                <th>
                    Salario
                </th>
                <th>
                    Comprar
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oficio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>
                        <input type="number" name="cantidad" />
                    </td>
                    <td>
                        <a asp-controller="Empleados"
                           asp-action="EmpleadosAlmacenadosCorrecto"
                           class="btn btn-danger"
                           asp-route-ideliminar="@item.IdEmpleado">
                            Eliminar Session
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <button type="submit" class="btn btn-success">Comprar</button>
</form>
}
            else
            {
                <h2>No hay registros</h2>
            }

