@model List<Departamento>

@{
    ViewData["Title"] = "PaginarGrupoDepartamento";
}

@{
    int numeroPagina = 1;
    int numeroRegistros = (int)ViewData["NUMEROREGISTROS"];
}


<h1>Paginar Grupo VistaDepartamento</h1>



<hr />
<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroRegistros; i += 2)
    {
        <li class="list-group-item list-group-item-danger">
            <a asp-controller="Departamentos"
               asp-action="PaginarGrupoDepartamentos"
               asp-route-posicion="@i">
                @numeroPagina
            </a>
        </li>
        numeroPagina += 1;
    }
</ul>
<hr />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                NOMBRE
            </th>
            <th>
                LOCALIDAD
            </th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDepartamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                

            </tr>
        }
    </tbody>
</table>
