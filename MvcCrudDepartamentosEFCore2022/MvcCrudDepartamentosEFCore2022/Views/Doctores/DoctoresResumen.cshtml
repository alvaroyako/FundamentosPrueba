@model ResumenDoctores@{ ViewData["Title"] = "Doctores Resumen";}<h1>Doctores Resumen</h1><h2 style="color:blue">@ViewBag.Mensaje</h2>@if (Model != null){<div style="background-color:lightblue">    <h1>Suma salarial: @Model.SumaSalarial</h1>    <h1>Media salarial: @Model.MediaSalarial</h1>    <h1>Máximo salario: @Model.MaximoSalario</h1></div>                <table class="table table-active">                    <thead>                        <tr>                            <th>APELLIDO</th>                            <th>ESPECIALIDAD</th>                            <th>SALARIO</th>                        </tr>                    </thead>                    <tbody>                        @foreach (var item in Model.Doctores)                        {                        <tr>                            <td>                                @Html.DisplayFor(modelItem => item.Apellido)                            </td>                            <td>                                @Html.DisplayFor(modelItem => item.Especialidad)                            </td>                            <td>                                @Html.DisplayFor(modelItem => item.Salario)                            </td>                        </tr>}                    </tbody>                </table>}