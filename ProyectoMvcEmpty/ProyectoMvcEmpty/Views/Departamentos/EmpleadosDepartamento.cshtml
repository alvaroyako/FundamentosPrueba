@model List<Empleado>

@{
    List<Departamento> departamentos = ViewData["Departamentos"] as List<Departamento>;
}

<h1>Empleados Departamento</h1>

<form method="post">
    <label>Seleccione departamento</label>
    <select name="iddepartamento" class="form-control">
        @foreach (Departamento dept in departamentos)
        {
            <option value="@dept.IdDepartamento">
                @dept.Nombre
            </option>
        }
    </select>
    <button type="submit" class="btn-info">
        Mostrar empleados
    </button>
</form>

@if (Model != null)

{
    <hr />
    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado empleado in Model)
            {
                <tr>
                    <td>@empleado.Apellido</td>
                    <td>@empleado.Oficio</td>
                    <td>@empleado.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}