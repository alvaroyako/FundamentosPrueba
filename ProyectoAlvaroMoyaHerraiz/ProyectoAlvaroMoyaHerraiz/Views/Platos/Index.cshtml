@model List<Plato> 

<h1 class="text-center">Menu</h1>

    <table class="table table-dark text-center" style="margin:0 auto">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Plato p in Model)
            {
                <tr>
                    <td>@p.Nombre</td>
                    <td>@p.Descripcion</td>
                    <td>@p.Categoria</td>
                    <td>@p.Precio &#8364;</td>
                </tr>
            }
        </tbody>
    </table>