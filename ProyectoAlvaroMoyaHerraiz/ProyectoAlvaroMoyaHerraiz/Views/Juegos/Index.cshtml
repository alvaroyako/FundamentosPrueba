@model List<Juego>

<h1 class="text-center">Juegos Disponibles</h1>

<form method="post">
    <div class="row">

        <div class="text-center col-4">
            <label>Filtrar por categoria</label>
            <select name="categoria" class="form-control">
                @foreach (string cat in ViewBag.Categorias)
                {
                    <option>@cat</option>
                }
            </select>
            <br />
            <button style="margin:0 auto" class="btn btn-outline-info" name="accion" value="filtrocategorias"
                    type="submit">
                Filtrar por categoria
            </button>
        </div>

        <div class="text-center col-4">
            <label>Filtrar por precio</label>
            <input type="number" name="precio" class="form-control" />
            <br />
            <button style="margin:0 auto" class="btn btn-outline-info" type="submit"
                    name="accion" value="filtroprecios">
                Filtrar por precio
            </button>
        </div>

        <div class="text-center col-4">
            <label>Buscar por nombre</label>
            <input type="text" name="nombre" class="form-control" />
            <br />
            <button style="margin:0 auto" class="btn btn-outline-info" type="submit"
                    name="accion" value="filtronombres">
                Buscar por nombre
            </button>
        </div>

    </div>
</form>
<br />
@if(Model != null)
            {
<table class="table table-dark text-center" style="margin:0 auto">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Categoria</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Juego j in Model)
        {
            <tr>
                <td>@j.Nombre</td>
                <td>@j.Descripcion</td>
                <td>@j.Categoria</td>
                <td>@j.Precio &#8364;</td>
                <td><img src="@j.Foto" style="width:100px;height:100px" /></td>
            </tr>
        }
    </tbody>
</table>
            }
            else
            {
                <h2 class="text-danger">@ViewBag.Error</h2>
            }
