@model tCountryInfo

<a asp-controller="Countries" asp-action="Index">Volver</a>
<ul class="list-group">
    <li class="list-group-item">
        Country: @Model.sName
    </li>
    <li class="list-group-item">
        Capital city: @Model.sCapitalCity
    </li>
    <li class="list-group-item">
        Phone code: @Model.sPhoneCode
    </li>
    <li class="list-group-item">
        Currency: @Model.sCurrencyISOCode
    </li>
    <li class="list-group-item">
        Flag: @Model.sCountryFlag
    </li>
</ul>